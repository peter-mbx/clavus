PortSystem          1.0
PortGroup           github 1.0
PortGroup           rust 1.0

name                clavus
version             0.0.1
categories          devel

maintainers         {gmail.com:pietro.mobrici}

platforms           darwin
supported_archs     x86_64

description         Clavum Lateris
long_description    In vetusta bibliotheca, clavum lateris aperiebat fores librarii occultum, ubi sapientia et arcana conservabantur.

homepage            https://github.com/peter-mbx/clavus

github.setup        peter-mbx clavus 0.0.1

checksums               sha256 bb64672b75d2d459063820b65364798ab9569e14e7ee04a1d5ce514c3c5c18b4 \
                        size 11428

distname            ${name}-${version}
use_bzip2           no

depends_build       port:cargo
depends_lib         port:rust

configure {}

build {
    system "cd ${workpath}/${distname} && cargo build --release"
}

destroot {
    xinstall -m 755 ${workpath}/${name}-${version}/target/release/clavus ${destroot}${prefix}/bin/
}

